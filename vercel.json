{
  "version": 2,
  "builds": [
    {
      "src": "Backend/server.js",
      "use": "@vercel/node",
      "config": {
        "installCommand": "echo 'Dependencies installed in root. Skipping function install.'",
        "zeroConfig": false
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/Backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/Public/index.html"
    }
  ]
}
